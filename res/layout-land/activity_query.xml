<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.google.android.gx5weather"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </RadioGroup>

        <EditText
            android:id="@+id/query_startdate"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/query_enddate"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/query_button_query"
            android:layout_width="65dp"
            android:layout_height="34dp"
            android:text="统计" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="34dp" >

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/query_button_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="今天" />

            <RadioButton
                android:id="@+id/query_button_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周" />

            <RadioButton
                android:id="@+id/query_button_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月" />
        </RadioGroup>
    </LinearLayout>

    <ListView
        android:id="@+id/query_list"
        android:layout_width="match_parent"
        android:layout_height="416dp" >

    </ListView>

    <Button
        android:id="@+id/query_back"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:text="返回" />

</LinearLayout>
