<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage">

    <LinearLayout
        android:id="@+id/toply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/showBluetooth"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:paddingTop="1dp"/>
        <TextView
            android:id="@+id/user_by"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="操作员"
            android:textSize="20dip"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pa_infos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toply"
        android:orientation="horizontal"/>

    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <RelativeLayout
            android:id="@+id/vital_sign_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">
            <RadioGroup
                android:id="@+id/vitalsign_edit_measures"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:orientation="horizontal">
            </RadioGroup>
            <RadioGroup
                android:id="@+id/vitalsign_edit_measures2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/vitalsign_edit_measures"
                android:layout_alignBottom="@id/vitalsign_edit_measures"
                android:orientation="horizontal">
            </RadioGroup>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_below="@id/vital_sign_edit">
                <TextView
                    android:id="@+id/vitalsign_edit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="16dip"/>
                <EditText
                    android:id="@+id/vitalsign_edit_text"
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:ems="10"
                    android:gravity="bottom"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/vitalsign_edit_inputkey"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</LinearLayout>