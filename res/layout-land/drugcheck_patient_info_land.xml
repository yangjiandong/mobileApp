<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlFavQuote"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toply"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rlMyPortfolio"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rlFavQuote"
        android:orientation="horizontal"
        android:padding="1dp">
        <TextView
            android:id="@+id/drugcheck_patientLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="住院号"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/drugcheck_patientId"
            style="@style/InfoText"
            android:layout_width="100dp"
            android:text="TextView"/>
        <TextView
            android:id="@+id/drugcheck_nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/drugcheck_name"
            style="@style/InfoText"
            android:layout_width="64dp"
            android:text="TextView"/>
        <TextView
            android:id="@+id/drugcheck_sexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="性别"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/drugcheck_sex"
            style="@style/InfoText"
            android:layout_width="64dp"
            android:text="TextView"/>
        <TextView
            android:id="@+id/drugcheck_ageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="年龄"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/drugcheck_age"
            style="@style/InfoText"
            android:layout_width="64dp"
            android:text="TextView"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pa_info2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rlMyPortfolio"
        android:orientation="horizontal"
        android:padding="1dp">
        <TextView
            android:id="@+id/drugcheck_bedNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="床号"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/drugcheck_bedNo"
            style="@style/InfoText"
            android:layout_width="64dp"
            android:text="TextView"/>
        <TextView
            android:id="@+id/drugcheck_doctorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="医生"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/drugcheck_doctor"
            style="@style/InfoText"
            android:layout_width="64dp"
            android:text="TextView"/>
         <TextView
            android:id="@+id/drugcheck_deptLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病区"
            android:textSize="16dip"/>
          <TextView
            android:id="@+id/drugcheck_deptName"
            style="@style/InfoText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="TextView"/>
    </LinearLayout>
</LinearLayout>