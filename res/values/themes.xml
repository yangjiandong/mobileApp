        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="Page">@style/Page</item>
        <item name="ModulePage">@style/ModulePage</item>
        <item name="body">@style/body</item>
        <item name="text">@style/text</item>
        <item name="text.medium">@style/text.medium</item>
        <item name="text.medium.bold">@style/text.medium.bold</item>
        <item name="text.dark">@style/text.dark</item>
        <item name="text.dark.medium">@style/text.dark.medium</item>
        <item name="text.dark.medium.bold">@style/text.dark.medium.bold</item>
        <item name="button">@style/button</item>
        <item name="button.medium">@style/button.medium</item>
        <item name="button.medium.bold">@style/button.medium.bold</item>
        <item name="button.dark">@style/button.dark</item>
        <item name="button.dark.medium">@style/button.dark.medium</item>
        <item name="button.dark.medium.bold">@style/button.dark.medium.bold</item>
