<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Page">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg1</item>
    </style>

    <style name="ModulePage">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/light1_box</item>
    </style>

    <style name="body">
        <item name="android:background">@drawable/light1_box</item>
        <item name="android:textColor">#666666</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="text">
        <item name="android:background">#00f2f2f2</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="text.medium">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="text.medium.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.dark">
        <item name="android:textColor">#666666</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="text.dark.medium">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="text.dark.medium.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/light1_button1</item>
    </style>

    <style name="button.medium">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="button.medium.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button.dark">
        <item name="android:textColor">#666666</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="button.dark.medium">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="button.dark.medium.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button.dark.big">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button.dark.big.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoText">
        <item name="android:textSize">18dip</item>
        <item name="android:background">@color/custom_info_back_color</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="InfoLabel">
        <item name="android:textSize">18dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoLayout">
        <item name="android:background">@color/custom_layout_color</item>
    </style>

    <color name="custom_theme_color">#CAE1FF</color>
    <!-- Light风格时,全局背景颜色 -->
    <color name="custom_list_text_color">#000000</color>
    <!-- 列表字体颜色 -->
    <color name="custom_info_back_color">#FFFFFF</color>
    <!-- 病人信息背景颜色 -->
    <color name="custom_info_text_color">#000000</color>
    <!-- 病人信息字体颜色 -->
    <color name="custom_grid_value_color">#0000FF</color>
    <!-- 网格字体颜色 -->
    <color name="custom_layout_color">#5CACEE</color>
    <!-- 布局背景颜色 -->

</resources>