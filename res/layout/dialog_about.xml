<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="35dp" android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ekingsoft" android:layout_gravity="center_vertical"></ImageView>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:layout_marginLeft="5dip">
          <TextView android:textColor="@color/dialog_text" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/app_name"></TextView>
          <TextView android:textColor="@color/dialog_text" android:id="@+id/dialogabout_appversion" android:layout_height="wrap_content" android:layout_width="fill_parent"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textColor="@color/dialog_text" android:layout_height="wrap_content" android:inputType="textMultiLine" android:minLines="3" android:layout_width="fill_parent" android:text="@string/dialogabout_about" android:paddingLeft="10dip" android:paddingTop="10dip" android:paddingRight="10dip" android:layout_gravity="bottom"></TextView>
</LinearLayout>