<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage" >

    <LinearLayout
        android:id="@+id/toply"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/showBluetooth"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:paddingTop="0dp" />

        <TextView
            android:id="@+id/drugcheck_user_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作员"
            style="?text.dark.medium.bold" />
    </LinearLayout>

    <LinearLayout
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条码"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/drugcheck_barcode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:textSize="20dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/drugcheck_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="提交" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drugcheck_pa_infos"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toply"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="41dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="用药信息"
            android:textSize="25dp" />
    </FrameLayout>

    <ListView
        android:id="@+id/drugcheck_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:headerDividersEnabled="false" >
    </ListView>

</LinearLayout>