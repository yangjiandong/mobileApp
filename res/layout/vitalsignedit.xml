<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="住院号" />

        <EditText
            android:id="@+id/vitalsign_edit_patientId"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_weight="0.04"
            android:ems="10" />

        <Button
            android:id="@+id/vitalsign_edit_get_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vitalsign_edit_patientId"
            android:focusable="false"
            android:text="提取"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名" />

        <TextView
            android:id="@+id/vitalsign_edit_patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别" />

        <TextView
            android:id="@+id/vitalsign_edit_sex"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text=" " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="年龄" />

        <TextView
            android:id="@+id/vitalsign_edit_age"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text=" " />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="床号" />

        <TextView
            android:id="@+id/vitalsign_edit_bedNo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text=" " />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="经治医生" />

        <TextView
            android:id="@+id/vitalsign_edit_doctor"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" " />
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/vital_sign_edit"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/vitalsign_edit_measures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:orientation="horizontal" >
            </RadioGroup>

            <RadioGroup
                android:id="@+id/vitalsign_edit_measures2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:orientation="horizontal" >
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07" >

                <TextView
                    android:id="@+id/vitalsign_edit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.26"
                    android:text="TextView" />

                <EditText
                    android:id="@+id/vitalsign_edit_text"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.15"
                    android:ems="10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/vitalsign_edit_inputkey"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>