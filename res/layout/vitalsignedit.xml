<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="4dp">
        <TextView
            android:id="@+id/vitalsign_edit_patientLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="住院号:"
            android:textSize="16dip"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/vitalsign_edit_patientId"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/vitalsign_edit_patientLabel"
            android:ems="10"
            android:singleLine="true"
            android:textSize="20dip"
            android:gravity="bottom"/>
        <Button
            android:id="@+id/vitalsign_edit_get_patient"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_toRightOf="@id/vitalsign_edit_patientId"
            android:focusable="false"
            android:text="提取"
            android:textSize="16dip"
            android:layout_alignTop="@id/vitalsign_edit_patientId"/>
         <ImageView
                android:id="@+id/loadingImageView"
                android:layout_width="25px"
                android:layout_height="25px"
                android:layout_marginLeft="5px"
                android:layout_toRightOf="@id/vitalsign_edit_get_patient"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="3dp">
         <TextView
            android:id="@+id/vitalsign_edit_nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="姓名:"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_patientName"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_sexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="性别:"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_sex"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" "
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_ageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="年龄:"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_age"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" "
            android:textSize="16dip"/>
    </LinearLayout>

     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="3dp">
        <TextView
            android:id="@+id/vitalsign_edit_bedNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="床号:"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_bedNo"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginLeft="5dp"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_doctorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="医生:"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/vitalsign_edit_doctor"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" "
            android:textSize="16dip"/>
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/vital_sign_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/vitalsign_edit_measures"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp">
            </RadioGroup>

            <RadioGroup
                android:id="@+id/vitalsign_edit_measures2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp">
            </RadioGroup>
            <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/vitalsign_edit_label"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="TextView"
                 android:textSize="16dip"
                 android:layout_marginLeft="15dp"
                 android:gravity="center_vertical"/>
              <EditText
                 android:id="@+id/vitalsign_edit_text"
                 android:layout_width="140dp"
                 android:layout_height="37dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="7dp"
                 android:ems="10"
                 android:gravity="bottom"
                 android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/vitalsign_edit_inputkey"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="270dp">
    </LinearLayout>

</LinearLayout>