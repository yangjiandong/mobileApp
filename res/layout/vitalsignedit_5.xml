<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?ModulePage" >

    <LinearLayout
        style="?InfoLayout"
        android:id="@+id/toply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/showBluetooth"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/user_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作员" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pa_infos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toply"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/vital_sign_edit"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/vitalsign_edit_5_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text=" "
                android:textSize="20dip" />

            <EditText
                android:id="@+id/vitalsign_edit_5_text"
                android:layout_width="140dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginLeft="10dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/vitalsign_edit_5_button_1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="5" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/vitalsign_edit_5_button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/vitalsign_edit_5_button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/vitalsign_edit_5_button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <Button
                android:id="@+id/vitalsign_edit_5_button_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空" />

            <Button
                android:id="@+id/vitalsign_edit_5_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退格" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注：灌肠次数的输入格式为：1(1/E)" />

    </LinearLayout>

</LinearLayout>