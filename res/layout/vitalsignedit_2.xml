<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage" >

    <LinearLayout
        style="?InfoLayout"
        android:id="@+id/toply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/showBluetooth"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/user_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作员"
            style="?text.dark.medium.bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pa_infos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toply"
        android:orientation="horizontal" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/vital_sign_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vitalsign_edit_2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="16dip" />

                <EditText
                    android:id="@+id/vitalsign_edit_2_text"
                    android:layout_width="140dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:ems="10"
                    android:gravity="bottom"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/vitalsign_edit_2_inputkey"
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>