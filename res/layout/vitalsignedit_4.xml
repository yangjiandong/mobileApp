<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage" >

    <LinearLayout
        android:id="@+id/toply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/showBluetooth"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/user_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作员"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pa_infos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toply"
        android:orientation="horizontal" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/vital_sign_edit"
            android:layout_width="fill_parent"
            android:layout_height="151dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vitalsign_edit_4_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="TextView" />

                <Spinner
                    android:id="@+id/vitalsign_edit_4_spinner"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/vitalsign_edit_4_radion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:checked="true"
                        android:text="阴性" />

                    <RadioButton
                        android:id="@+id/vitalsign_edit_4_radion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="阳性" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/vitalsign_edit_4_button_save"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="保存" />

        <Button
            android:id="@+id/vitalsign_edit_4_button_close"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="关闭" />

    </LinearLayout>

</LinearLayout>