<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/operationapproval_patientId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dip"
        android:text="住院号"
        android:textColor="?custom_list_text_color"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/operationapproval_patientName"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:text="患者姓名"
        android:textColor="@color/custom_list_text_color"
        android:textSize="20dip" >
    </TextView>

    <TextView
        android:id="@+id/operationapproval_doctorName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dip"
        android:text="申请医生"
        android:textColor="@color/custom_list_text_color"
        android:textSize="20dip" >
    </TextView>

</LinearLayout>