<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?ModulePage" >

    <LinearLayout
        android:id="@+id/toply"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_by"
            style="?text.dark.medium.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作员" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/operationappr_title"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toply"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手术审批表"
            android:textSize="24dip" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/operationappr_title" >

        <LinearLayout
            style="?InfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                style="?InfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="3dp" >

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="住院号" />

                    <TextView
                        android:id="@+id/operationappr_patientId"
                        style="?InfoText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="姓名" />

                    <TextView
                        android:id="@+id/operationappr_patientName"
                        style="?InfoText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/operationappr_sex"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="年龄" />

                    <TextView
                        android:id="@+id/operationappr_age"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="病区" />

                    <TextView
                        android:id="@+id/operationappr_deptName"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="床号" />

                    <TextView
                        android:id="@+id/operationappr_bedNo"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手术名称" />

                    <TextView
                        android:id="@+id/operationappr_operationName"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手术等级" />

                    <TextView
                        android:id="@+id/operationappr_operationStep"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="切口" />

                    <TextView
                        android:id="@+id/operationappr_cut"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="术前诊断" />

                    <TextView
                        android:id="@+id/operationappr_diagnosis"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="病情" />

                    <TextView
                        android:id="@+id/operationappr_condition"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="费别" />

                    <TextView
                        android:id="@+id/operationappr_checkOut"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手术日期" />

                    <TextView
                        android:id="@+id/operationappr_operDate"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="拟行科室" />

                    <TextView
                        android:id="@+id/operationappr_operDeptName"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手术台次" />

                    <TextView
                        android:id="@+id/operationappr_operAmount"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="手术房间" />

                    <TextView
                        android:id="@+id/operationappr_operRoom"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="隔离标志" />

                    <TextView
                        android:id="@+id/operationappr_isolation"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="手术医生" />

                    <TextView
                        android:id="@+id/operationappr_doctorName"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="特殊手术" />

                    <TextView
                        android:id="@+id/operationappr_special"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="助手1" />

                    <TextView
                        android:id="@+id/operationappr_assistant1"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="助手2" />

                    <TextView
                        android:id="@+id/operationappr_assistant2"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="助手3" />

                    <TextView
                        android:id="@+id/operationappr_assistant3"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="助手4" />

                    <TextView
                        android:id="@+id/operationappr_assistant4"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="麻醉方法" />

                    <TextView
                        android:id="@+id/operationappr_narcosisMethod"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="麻醉医师" />

                    <TextView
                        android:id="@+id/operationappr_narcosisDoctorName"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" " />
                </TableRow>

                <TableRow android:paddingTop="1dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="术前准备" />

                    <TextView
                        android:id="@+id/operationappr_operPrepare"
                        style="?InfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text=" " />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/operationappr_radiogroup"
                style="?InfoLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/operationappr_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="同意" />

                    <RadioButton
                        android:id="@+id/operationappr_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="不同意" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/operationappr_note_layout"
                style="?InfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/operationappr_note_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注:" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                style="?InfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/operationappr_save"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:textSize="20dip" />

                <Button
                    android:id="@+id/operationappr_close"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="关闭"
                    android:textSize="20dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>