<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlFavQuote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toply"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlMyPortfolio"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/drugcheck_patientLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="住院号"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/loadingImageView"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_alignRight="@id/rlMyPortfolio"
            android:layout_marginLeft="5px" />

        <TextView
            android:id="@+id/drugcheck_patientId"
            style="?InfoText"
            android:layout_width="174.5dp"
            android:layout_alignBaseline="@+id/drugcheck_patientLabel"
            android:layout_alignBottom="@+id/drugcheck_patientLabel"
            android:layout_toRightOf="@+id/drugcheck_patientLabel"
            android:gravity="center"
            android:text=" "
            android:textSize="18dip" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pa_info1"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlFavQuote"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/drugcheck_nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_name"
            style="?InfoText"
            android:layout_width="174.5dp"
            android:layout_marginLeft="22dp"
            android:gravity="center"
            android:text=" "
            android:textSize="18dip" />

    </LinearLayout>

    <LinearLayout
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/drugcheck_sexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_sex"
            style="?InfoText"
            android:layout_width="64dp"
            android:layout_marginLeft="23.5dp"
            android:text=" "
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_ageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="年龄"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_age"
            style="?InfoText"
            android:layout_width="64dp"
            android:text=" "
            android:textSize="18dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pa_info2"
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pa_info1"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/drugcheck_bedNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="床号"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_bedNo"
            style="?InfoText"
            android:layout_width="64dp"
            android:layout_marginLeft="22dp"
            android:text=" "
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_doctorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="医生"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_doctor"
            style="?InfoText"
            android:layout_width="64dp"
            android:text=" "
            android:textSize="18dip" />
    </LinearLayout>

    <LinearLayout
        style="?InfoLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/drugcheck_deptLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病区"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/drugcheck_deptName"
            style="?InfoText"
            android:layout_width="174.5dp"
            android:layout_marginLeft="23dp"
            android:text=" "
            android:textSize="18dip" />

    </LinearLayout>

</LinearLayout>