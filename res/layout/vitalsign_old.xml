<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModulePage" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip" >

                <TextView
                    android:id="@+id/user_by"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="操作员"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout android:id="@+id/rlFavQuote"
                android:orientation="vertical" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout android:id="@+id/rlMyPortfolio"
                    android:orientation="vertical" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:padding="5px"
                    >
                    <TextView
                    android:id="@+id/vitalsign_patientLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dip"
                    android:text="住院号" />

                    <EditText
                        android:id="@+id/vitalsign_patientId"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/vitalsign_patientLabel"
                        android:singleLine="true"
                        android:textSize="15dip" />

                <Button
                    android:id="@+id/get_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/vitalsign_patientId"
                    android:focusable="false"
                    android:text="提取"
                    android:textSize="12dip" />

                    <ImageView android:id="@+id/myPortfolioLoadingImageView"
                        android:layout_width="25px" android:layout_height="25px"
                        android:layout_toRightOf="@+id/get_patient"
                        android:layout_marginLeft="5px" android:layout_alignRight="@id/rlMyPortfolio" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/vitalsign_nameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/vitalsign_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/vitalsign_sexLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="性别" />

                <TextView
                    android:id="@+id/vitalsign_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/vitalsign_ageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/vitalsign_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/vitalsign_bedNoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="床号" />

                <TextView
                    android:id="@+id/vitalsign_bedNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/vitalsign_doctorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="医生" />

                <TextView
                    android:id="@+id/vitalsign_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/vitalsign_busDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="日期" />

                <EditText
                    android:id="@+id/vitalsign_busDate"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:ems="10" />

                <Spinner
                    android:id="@+id/vitalsign_timePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="-10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vitalsign_layout1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vitalsign_layout2"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>